<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minWidth="252dp"
    android:minHeight="100dp"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription="@string/icon"
        android:src="@drawable/ic_google" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingEnd="0dp">

        <TextView
            android:id="@+id/title"
            style="@style/TextAppearance.Compat.Notification.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_500"
            android:text="@string/tri_tue_con_nguoi_hinh_thanh_trong_hoc_tap"
            android:textStyle="bold"
            android:textColor="#215DB6"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/content"
            style="@style/TextAppearance.Compat.Notification.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/poppins_400"
            android:text="@string/nhan_cach_con_nguoi_hinh_thanh_trong_bao_to"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:text="@string/let_us_go"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="11sp" />

    </LinearLayout>

</LinearLayout>